{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Nuclei Detection",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/nuclei_stardist_vscode.py",
            "console": "integratedTerminal",
            "args": [
                ".",  // Current directory
                // Uncomment and modify as needed:
                // "--prob-thresh", "0.5",
                // "--nms-thresh", "0.5",
                // "--size-min", "50",
                // "--size-max", "2500",
                // "--sigma-above-bg", "1.5"
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Nuclei Detection (Custom Dir)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/nuclei_stardist_vscode.py",
            "console": "integratedTerminal",
            "args": [
                "${input:imageDirectory}",
                "--prob-thresh", "0.5",
                "--nms-thresh", "0.5"
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "imageDirectory",
            "type": "promptString",
            "description": "Enter path to image directory:",
            "default": "."
        }
    ]
}
